table.table
	tr
		th Name
		th Old
		th Address
		th Actions

	each user in userList 
		tr
			td(style="line-height:40px;")=user.name
			//- td
			//- 	img(src="http://localhost:3000/"+user.avatar,width="40",height="40",style="image-rendering: unset;object-fit: fill;")
			td(style="line-height:40px;")=user.old 
			td(style="line-height:40px;")=user.address
			td
				a.btn.btn-info(href='/users/'+user.id) View
				span 
					a.btn.btn-danger(href='/users/edit/'+user.id) Edit