extends ../layouts/khungadmin.pug
block preloader
	include ../layouts/preloader.pug
block navbar
	include ../users/navbar.pug
block userList
	h1 Create user
	if errors 
		each error in errors
			.alert.alert-danger=error
	form(action='/users/create',method='POST',enctype='multipart/form-data')
		.form-group
			label(for="name") Name
			input#name.form-control(name="name",type='text',value=values?values.name:"")

		.from-group
			label(for="phone") Phone
			input#phone.form-control(name="phone",type='text',value=values?values.phone:"")

		.from-group
			label(for="avatar") Avatar
			input#avatar.form-control-file(name="avatar",type="file")

		button.btn.btn-danger.mt-3 Create