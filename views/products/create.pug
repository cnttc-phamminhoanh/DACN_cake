body
	.spinner-wrapper
		.spinner
			.bounce1
			.bounce2
			.bounce3

	nav.navbar.navbar-expand-md.navbar-light.bg-dark.sticky-top
		.container-fluid
			a.navbar-brand(href='/')
				img(src='http://localhost:3000/images/logo.svg', alt='alternative',style='height:32px;weight:113px')
			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
				span.navbar-toggler-icon
		.collapse.navbar-collapse#navbarResponsive
			ul.navbar-nav.ml-auto
				li.nav-item
				if user 
					a.nav-link(style='color:#fff;text-decoration:none',href='#') #{user.email}
				li.nav-item
					a.nav-link(style='color:#fff;text-decoration:none',href='/logout') Logout
	br
	br
	.container-fluid.bg
		.row.justify-content-center
			.col-md-4.col-sm-6.col-xs-12.row-container
				form(action="/products/create",method="POST",enctype='multipart/form-data')
					h1(style='margin-left:45px') Create Product
					br
					.form-group
						label(for='name') Name 
						input#name.form-control(name="name",type='text', placeholder='Enter name')
						
					.form-group
						label.label(for='price') Price
						input#price.form-control(name="price",type='number', placeholder='Enter price')
					
					.form-group
						label.label(for='price') Content
						input#content.form-control(name="content",type='text', placeholder='Enter content')

					.from-group
							label(for="image") Image
							input#image.form-control-file(name="image",type="file")
					br
					br
					button.btn.btn-success.btn-block.my-3 Create 
				 
			a.btn.btn-dark(href='http://localhost:3000/logged/admin/',style='height:36px;color:white;text-decoration:none;margin-top:485px;') Back	